%body.bodyClass
  .header
    .panel
      .panel-default
        %h1 Hangman
        %p Do it or Die for it.
.row
  .middle-page
    .col-md-12
      .small-panel
        .panel
          .panel-default
            %h2 Forgot your password?
            = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
              = devise_error_messages!
              %div
                = f.label :email
                -#%br/
                = f.email_field :email, autofocus: true
                %br
                %br
                %div= f.submit "Send me reset password instructions"
            = render "devise/shared/links"
.row
  .footer
    .panel
      .panel-default
        .contact
          %p
            find code on :
            = link_to "https://github.com/kiranpawar87/Kiran_Project.git" do
              GitHub
          %p
            Website :
            = link_to "http://localhost:3000/hangman/index" do
              www.hangman.com
          %p &copy copyrights are reserved